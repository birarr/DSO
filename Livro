import java.util.ArrayList;


public class Livro {

    private int codigo;
    private int ano;
    private String titulo;
    private Editora editora;
    private ArrayList<Autor> autores;
    private ArrayList<Capitulo> capitulos;

    public Livro(int codigo, String titulo, int ano , Editora editora, Autor autor, int numCapitulo, String tituloCapitulo) {
        this.codigo = codigo;
        this.ano = ano;
        this.titulo = titulo;
        this.editora = editora;
        this.autores = new ArrayList<>();
        autores.add(autor);
        this.capitulos = new ArrayList<>();
        capitulos.add(new Capitulo(numCapitulo, tituloCapitulo));
    }


    public int getCodigo() {
        return codigo;
    }

    public void setCodigo(int codigo) {
        this.codigo = codigo;
    }

    public int getAno() {
        return ano;
    }

    public void setAno(int ano) {
        this.ano = ano;
    }

    public String getTitulo() {
        return titulo;
    }

    public void setTitulo(String titulo) {
        this.titulo = titulo;
    }

    public Editora getEditora() {
        return editora;
    }

    public void setEditora(Editora editora) {
        this.editora = editora;
    }

    public ArrayList<Autor> getAutores() {
        return autores;
    }

    public void setAutores(ArrayList<Autor> autores) {
        this.autores = autores;
    }

    public ArrayList<Capitulo> getCapitulos() {
        return capitulos;
    }

    public void setCapitulos(ArrayList<Capitulo> capitulos) {
        this.capitulos = capitulos;
    }

    public void incluirAutor(Autor autor) {
        if(!jaContem(autor) && autor!=null)
        autores.add(autor);
    }

    public void excluirAutor(Autor autor) {
        if(jaContem(autor) && autor!=null)
            autores.remove(autor);
    }

    public boolean jaContem(Autor autor) {
        boolean contem = false;
        if(autor !=null) {
            for(Autor a : autores) {
                if(a.getCodigo() == autor.getCodigo())
                    contem = true;
            }

        }
        return contem;
    }

    public void incluirCapitulo(int numero, String titulo) {
        if(findCapituloByTitulo(titulo)==null) {
            capitulos.add(new Capitulo(numero, titulo));
        }
    }

    public void excluirCapitulo(String titulo) {
        Capitulo capitulo = findCapituloByTitulo(titulo);
        if(capitulo!=null)
        capitulos.remove(capitulo);
    }

    public Capitulo findCapituloByTitulo(String titulo) {
        Capitulo capitulo = null;
        for(Capitulo cap : capitulos) {
            if (cap.getTitulo().equals(titulo)) ;
            capitulo = cap;
        }
        return capitulo;
        }
    }

